# Labelgate Environment Variables
# Copy this file to .env and fill in your values.
# All variables use the LABELGATE_ prefix for direct pass-through.

# ============================================
# Cloudflare Credentials (Required for main mode)
# ============================================

# API Token (recommended) - create at https://dash.cloudflare.com/profile/api-tokens
#
# MINIMUM REQUIRED PERMISSIONS:
#
# For DNS-only mode:
#   - Zone > Zone > Read          (to lookup zone IDs)
#   - Zone > DNS > Edit           (to create/update/delete DNS records)
#
# For Tunnel mode (includes DNS):
#   - Zone > Zone > Read          (to lookup zone IDs)
#   - Zone > DNS > Edit           (to create/update/delete DNS records)
#   - Account > Cloudflare Tunnel > Edit  (to manage tunnel ingress rules)
#
# ZONE RESOURCES:
#   - Select "All zones" for managing multiple domains
#   - Or select specific zones if you only manage certain domains
#
# ACCOUNT RESOURCES (for Tunnel mode):
#   - Select your account that owns the tunnel
#
LABELGATE_CLOUDFLARE_API_TOKEN=

# Account ID - find at https://dash.cloudflare.com (sidebar -> Account ID)
LABELGATE_CLOUDFLARE_ACCOUNT_ID=

# Tunnel ID - create tunnel first: cloudflared tunnel create <name>
LABELGATE_CLOUDFLARE_TUNNEL_ID=

# ============================================
# Agent Mode Settings (for remote hosts)
# ============================================

# Main Labelgate endpoint
LABELGATE_CONNECT_ENDPOINT=ws://labelgate-main:8081/ws

# Agent authentication token (set on main instance)
LABELGATE_CONNECT_TOKEN=

# Optional: Agent ID (auto-generated from /etc/machine-id if empty)
LABELGATE_CONNECT_AGENT_ID=

# Default tunnel to use
LABELGATE_DEFAULT_TUNNEL=default

# Heartbeat interval
LABELGATE_CONNECT_HEARTBEAT_INTERVAL=30s

# ============================================
# Optional Settings
# ============================================

# Log level: debug, info, warn, error
LABELGATE_LOG_LEVEL=info

# Log format: json, text
LABELGATE_LOG_FORMAT=text
